.page {
  padding-bottom: 140rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.loading {
  padding: 60rpx 0;
  text-align: center;
  color: #888;
}

.hero {
  width: 100%;
  height: 420rpx;
  background: #eee;
}

.card {
  background: #fff;
  margin: 18rpx 18rpx 0;
  border-radius: 18rpx;
  padding: 18rpx;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.06);
}

.top {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: 20rpx;
}

.name {
  font-size: 34rpx;
  font-weight: 800;
  color: #111;
}

.price {
  font-size: 34rpx;
  font-weight: 900;
  color: #111;
}

.desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.section-title {
  font-size: 28rpx;
  font-weight: 800;
  color: #111;
  margin-bottom: 12rpx;
}

.notice {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.chip {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: #f1f1f1;
  color: #444;
}

.row {
  display: flex;
  gap: 18rpx;
  margin-top: 16rpx;
  align-items: flex-start;
}

.label {
  width: 120rpx;
  font-size: 26rpx;
  color: #333;
  padding-top: 6rpx;
}

.wrap {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.opt {
  font-size: 24rpx;
  padding: 10rpx 14rpx;
  border-radius: 12rpx;
  background: #f2f2f2;
  color: #444;
}

.opt.active {
  background: #fff7db;
  border: 2rpx solid #ffcd4e;
  color: #111;
  font-weight: 700;
}

.qty {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.qty-btn {
  width: 70rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.qty-num {
  font-size: 30rpx;
  font-weight: 800;
  width: 60rpx;
  text-align: center;
}

.total {
  margin-top: 24rpx;
  border-top: 1rpx solid #eee;
  padding-top: 18rpx;
  align-items: center;
}

.sum {
  font-size: 32rpx;
  font-weight: 900;
  color: #111;
}

.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 18rpx;
  background: rgba(255,255,255,0.96);
  border-top: 1rpx solid #eee;
}

.btn {
  background: #ffcd4e;
  font-weight: 900;
  border-radius: 999rpx;
}
